<Window x:Class="CapsKey.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CapsKey"
        mc:Ignorable="d"
        Title="CapsKey Settings" Height="178" Width="250">
    <StackPanel Orientation="Vertical">
        
        <DockPanel>
            <CheckBox IsChecked="{Binding UseShortcutKey, Mode=TwoWay}">Shortcut:</CheckBox>
            <ComboBox ItemsSource="{Binding AllKeys}" SelectedItem="{Binding SelectedKey, Mode=TwoWay}" IsEnabled="{Binding UseShortcutKey}"/>
        </DockPanel>

        <CheckBox IsChecked="{Binding StartWithWindows, Mode=TwoWay}">Start with Windows</CheckBox>

        <CheckBox IsChecked="{Binding AlwaysOnTop, Mode=TwoWay}">Keep on top of other windows</CheckBox>

        <CheckBox IsChecked="{Binding SuppressCapsKey, Mode=TwoWay}">Suppress CapsLock key presses</CheckBox>

        <Button x:Name="ViewLogButton" Command="{Binding ViewLogPressed}">View log file</Button>
    </StackPanel>
</Window>
